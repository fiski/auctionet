{
  "name": "Auctionet Avstånd",
  "version": "1.4",
  "manifest_version": 3,
  "description": "Visa avstånd till auktionshus",
  "permissions": [
    "geolocation",
    "scripting",
    "tabs",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://auctionet.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["auktionshus_sverige.json"],
      "matches": ["<all_urls>"]
    }
  ]
}